generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  password String 
  email String @unique @db.VarChar(255)
  role ROLE @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updateAt DateTime @updatedAt @map("upadte_at")

  @@map("users")
}

model Session {
  id        Int   @id @default(autoincrement())
  sid       String   @unique
  userId    Int?
  expire   DateTime
  sess   Json
  @@map("sessions")
}

enum ROLE {
  USER
  ADMIN
}